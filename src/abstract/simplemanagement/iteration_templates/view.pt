<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="abstract.simplemanagement">
<body>

<metal:content-core fill-slot="content-core">
    <metal:block define-macro="content-core">

      <table class="listing" summary="Stories"
           i18n:attributes="summary">
        <thead>
          <tr>
            <th class="nosort column" i18n:translate="">Story</th>
            <th class="nosort column" i18n:translate="">Estimate</th>
            <th class="nosort column" i18n:translate="">Actual hours</th>
            <th class="nosort column" i18n:translate="">Difference</th>
            <th class="nosort column" i18n:translate="">Assignees</th>
            <th class="nosort column" i18n:translate="">Epic</th>
          </tr>
        </thead>
        <tbody tal:condition="view/stories">
          <tr tal:repeat="story view/stories"
              tal:attributes="class story/status">
            <td>
              <a href=""
                 title=""
                 tal:attributes="href story/url;
                                 title story/description"
                 tal:content="story/title"></a>
            </td>
            <td tal:content="story/estimate"></td>
            <td tal:content="story/hours"></td>
            <td tal:attributes="class story/time_status"
                tal:content="story/difference">
            </td>
            <td>
              <ul tal:condition="story/assignees">
                <li tal:repeat="assignee story/assignees"
                    tal:content="assignee"></li>
              </ul>
              <em tal:condition="not:story/assignees"
                  i18n:translate="">
                Unassigned
              </em>
            </td>
            <td>
              <a href=""
                 title=""
                 tal:condition="story/epic"
                 tal:attributes="href story/epic/url;
                                 title story/epic/title"
                 tal:content="story/epic/title"></a>
              <em tal:condition="not:story/epic">&nbsp;</em>
            </td>
          </tr>
        </tbody>
        <tbody tal:condition="not:view/stories">
          <tr>
            <td class="discreet" colspan="6"
              i18n:translate="">
              No stories in this iteration.
              Add a new one or bring them in via the iteration planner.
            </td>
          </tr>
        </tbody>
      </table>

    </metal:block>
</metal:content-core>

</body>
</html>
