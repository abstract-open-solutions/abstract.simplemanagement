<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="abstract.simplemanagement">
<body>

<metal:content-core fill-slot="content-core">
    <metal:block define-macro="content-core">

      <div class="row">
        <div class="cell width-8 position-0"
             tal:content="context/text">
        </div>
        <div class="cell width-4 position-8">
          <dl>
            <dt>Timing</dt>
            <dd>
              <table class="listing" summary="Timing">
                <thead>
                  <tr>
                    <th class="nosort column">Estimate</th>
                    <th class="nosort column">Resource time</th>
                    <th class="nosort column">Difference</th>
                  </tr>
                </thead>
                <tbody>
                  <tr tal:define="timing view/timing">
                    <td tal:content="timing/estimate"></td>
                    <td tal:content="timing/resource_time"></td>
                    <td tal:content="timing/difference"
                        tal:attributes="class timing/status"></td>
                  </tr>
                </tbody>
              </table>
            </dd>
            <dt>Assignees</dt>
            <dd>
              <ul tal:condition="context/assigned_to">
                <li tal:repeat="assignee context/assigned_to"
                    tal:content="assignee"></li>
              </ul>
              <em tal:condition="not:context/assigned_to">
                Unassigned
              </em>
            </dd>
            <tal:block condition="view/has_epic">
            <dt>Epic</dt>
            <dd>
              <a href=""
                 title=""
                 tal:attributes="href context/epic/to_object/absolute_url;
                                 title context/epic/to_object/description"
                 tal:content="context/epic/to_object/title"></a>
            </dd>
            </tal:block>
          </dl>
        </div>
      </div>

    </metal:block>
</metal:content-core>

</body>
</html>
